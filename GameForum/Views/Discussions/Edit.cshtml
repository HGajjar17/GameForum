@model GameForum.Models.Discussion

@{
    ViewData["Title"] = "Edit Discussion";
}

<div class="card mb-4">
    <div class="card-header bg-dark text-white">
        <h1>Edit Discussion</h1>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Hidden fields -->
                    <input type="hidden" asp-for="DiscussionId" />
                    <input type="hidden" asp-for="ImageFilename" />
                    <input type="hidden" asp-for="ApplicationUserId" />
                    @* <input type="hidden" asp-for="CreateDate" /> *@

                    ApplicationUserId

                    <div class="mb-3 w-50">
                        <img src="/photos/@Model.ImageFilename" alt="Thumbnail" class="img-thumbnail" />
                    </div>

                    <!-- Title input -->
                    <div class="mb-3">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <!-- Content input -->
                    <div class="mb-3">
                        <label asp-for="Content" class="control-label"></label>
                        <textarea asp-for="Content" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>

                    <!-- Action buttons on the same line -->
                    <div class="mb-3 d-flex gap-2">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model GameForum.Models.Discussion

@{
    ViewData["Title"] = "Delete Discussion";
}

<div class="card mb-4">
    <div class="card-header bg-danger text-white">
        <h1 class="h4 m-0">Delete Discussion</h1>
    </div>

    <div class="card-body">
        <!-- Confirmation Message -->
        <h3 class="text-danger">Are you sure you want to delete this discussion?</h3>
        <p class="text-muted">This action cannot be undone.</p>

        <!-- Discussion Details -->
        <dl class="row">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

            <dt class="col-sm-3">Content</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Content)</dd>

            <dt class="col-sm-3">Created On</dt>
            <dd class="col-sm-9">@Model.CreateDate.ToString("MMMM dd, yyyy hh:mm tt")</dd>
        </dl>

        <!-- Delete Confirmation Form -->
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="DiscussionId" />

            <!-- Action Buttons -->
            <div class="d-flex gap-2">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

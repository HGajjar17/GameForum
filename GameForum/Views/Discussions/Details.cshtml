@model GameForum.Models.Discussion

@{
    ViewData["Title"] = "Discussion Details";
}

<!-- Add a page header -->
<div class="card mb-4">
    <div class="card-header bg-dark text-white">
        <h1>Details Discussion</h1>
    </div>
    <div class="card-body">
        <h3>@Model.Title</h3>
        <img src="@Url.Content("/photos/" + Model.ImageFilename)" alt="@Model.Title" class="img-fluid mb-3" style="max-width: 400px;" />
        <p>@Model.Content</p>
        <p class="text-muted">Created on: @Model.CreateDate.ToString("MMMM dd, yyyy hh:mm tt")</p>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.DiscussionId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

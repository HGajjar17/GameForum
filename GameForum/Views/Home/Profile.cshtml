@model GameForum.Data.ApplicationUser

@{
    ViewData["Title"] = $"{Model.Name}'s Profile";
}

<h2>@Model.Name's Profile</h2>

<div class="profile-container">
    <img src="~/profile-pictures/@(Model.ImageFilename ?? "default.png")"
         alt="Profile Picture" class="profile-pic" />
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Location:</strong> @Model.Location</p>
    <p><strong>Bio:</strong> @Model.Bio</p>
</div>

<h3>Discussion Threads</h3>
@if (Model.Discussions is List<Discussion> discussions && discussions.Any())
{
    <ul>
        @foreach (var discussion in discussions)
        {
            <li>
                <a asp-page="/Discussion" asp-route-id="@discussion.DiscussionId">
                    @discussion.Title
                </a> - @discussion.CreateDate.ToShortDateString()
            </li>
        }
    </ul>
}
else
{
    <p>No discussions yet.</p>
}

<style>
    .profile-container {
        border: 1px solid #ddd;
        padding: 15px;
        border-radius: 8px;
        max-width: 400px;
    }

    .profile-pic {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 10px;
    }
</style>
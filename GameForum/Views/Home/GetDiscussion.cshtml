@model GameForum.Models.Discussion

@{
    ViewBag.Title = @Model.Title;
}

<div class="card mb-4">
    <div class="card-header bg-dark text-white">
        <h1>Discussion Details</h1>
    </div>

    <div class="card-body">
        <!-- Discussion Title and Meta Info -->

        @* Added the Profile layout *@
        
        @if (Model.ApplicationUser != null)
        {
            <div class="d-flex">
                @if (Model.ApplicationUser != null)
                {
                    <div class="d-flex align-items-center">
                        @if (!string.IsNullOrEmpty(Model.ApplicationUser.ImageFilename))
                        {
                            <div class="pe-2">
                                <img src="~/profile_img/@Model.ApplicationUser.ImageFilename" alt="@Model.ApplicationUser.Name" class="profile-thumbnail" />
                            </div>
                        }
                        <div>
                            <a href="@Url.Action("Profile", "Home", new { id = Model.ApplicationUserId })" class="fw-bold text-dark">
                                @Model.ApplicationUser.Name
                            </a>
                        </div>
                    </div>
                }
            </div>
        }

        <h3>@Model.Title</h3>
        <p><strong>Created on:</strong> @Model.CreateDate.ToString("MMM dd, yyyy hh:mm tt")</p>

        <!-- Image Display -->
        @if (!string.IsNullOrEmpty(Model.ImageFilename))
        {
            <img src="~/photos/@Model.ImageFilename" alt="@Model.Title" class="img-thumbnail mb-3" style="max-width: 1000px;" />
        }

        <!-- Content -->
        <p>@Model.Content</p>

        <!-- Comments Section -->
        <hr />
        <h4>Comments: @Model.Comments?.Count()</h4>
        <div class="list-group mb-3">
            @foreach (var comment in Model.Comments ?? new List<GameForum.Models.Comment>())
            {
                <div class="list-group-item border rounded mb-2 p-3">
                    <div class="d-flex align-items-center mb-2">
                        @if (comment.ApplicationUser != null)
                        {
                            @if (!string.IsNullOrEmpty(comment.ApplicationUser.ImageFilename))
                            {
                                <img src="~/profile_img/@comment.ApplicationUser.ImageFilename"
                                     alt="@comment.ApplicationUser.Name"
                                     class="rounded-circle me-2"
                                     style="width: 30px; height: 30px; object-fit: cover;" />
                            }
                            <strong class="text-dark">@comment.ApplicationUser.Name</strong>
                        }
                    </div>
                    <p>@comment.Content</p>
                    <small class="text-muted">Posted on: @comment.CreateDate.ToString("MMM dd, yyyy hh:mm tt")</small>
                </div>
            }
        </div>

        <!-- Add Comment Button -->
        <div class="mb-3 d-flex gap-2">
            <a asp-controller="Comments" asp-action="Create" asp-route-id="@Model.DiscussionId" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> Add Comment
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fa-solid fa-arrow-left"></i> Back
            </a>
        </div>

    </div>
</div>

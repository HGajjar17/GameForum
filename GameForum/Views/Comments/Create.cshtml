@model GameForum.Models.Comment

@{
    ViewData["Title"] = "Create Comment";
}

<div class="card mb-4">
    <div class="card-header bg-dark text-white">
        <h1 class="h4 m-0">Create Comment</h1>
    </div>

    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Comment Content Input -->
            <div class="mb-3">
                <label asp-for="Content" class="form-label">Comment</label>
                <textarea asp-for="Content" class="form-control" rows="5" placeholder="Write your comment here..."></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <!-- Hidden input for DiscussionId -->
            <input type="hidden" value="@ViewBag.DiscussionId" name="DiscussionId" />

            <!-- Buttons -->
            <div class="d-flex gap-2">
                <input type="submit" value="Post Comment" class="btn btn-primary" />
                <a asp-controller="Home" asp-action="GetDiscussion" asp-route-id="@ViewBag.DiscussionId" class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-left"></i> Back to Discussion Details
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

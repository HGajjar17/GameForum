@model GameForum.Models.Comment

@{
    ViewData["Title"] = "Create Comment";
}

<h1>Create Comment</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Multi-line textarea for Comment Content -->
            <div class="mb-3">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <!-- Hidden input for DiscussionId -->
            <input type="hidden" value="@ViewBag.DiscussionId" name="DiscussionId" />

            <div class="mb-3">
                <input type="submit" value="Post Comment" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Discussions" asp-action="Edit" asp-route-id="@ViewBag.DiscussionId">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
